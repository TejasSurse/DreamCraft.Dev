<% layout('layouts/layout') %>
<div class="container my-5">
    <div class="row align-items-center">
      <!-- Left Side: Contact Form -->
      <div class="col-md-6 mb-4">
        <div class="card shadow rounded-3 p-4" style="background: linear-gradient(145deg, #ffffff, #e6e6e6);">
          <h3 class="text-center mb-4">Get in Touch</h3>
          <form action="/contact" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
              <label for="number" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="number" name="number" placeholder="Enter your phone number" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="4" placeholder="Enter your message" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100 shadow-sm">Submit</button>
          </form>
        </div>
      </div>
  
      <!-- Right Side: Google Map -->
      <div class="col-md-6 mb-4">
        <div class="card shadow rounded-3 overflow-hidden" style="background: linear-gradient(145deg, #ffffff, #e6e6e6);">
          <div class="ratio ratio-4x3">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d440.41049292538395!2d75.32458679854183!3d19.863538926402143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bdb9863ce39a409%3A0x4b75a59a206bca1d!2sEknath%20Nagar%20Rd%2C%20Chhatrapati%20Sambhaji%20Nagar%2C%20Maharashtra%20431005!5e0!3m2!1sen!2sin!4v1737924446987!5m2!1sen!2sin" 
              width="600" 
              height="450" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
  